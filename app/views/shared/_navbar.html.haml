%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
          
      %a.navbar-brand{:href => "#"}
        Firecamp
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if !current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Log In
              %strong.caret
            .dropdown-menu{:style => "padding: 15px; padding-bottom: 0px;"}
              = bootstrap_form_tag url: login_path do |f|
                = f.text_field :email, hide_label: true, placeholder: 'Email'
                = f.password_field :password, hide_label: true, placeholder: 'Password'
                = link_to "Forgot Password?", new_password_path 
                = f.submit "Log In" 
        - else
          %li.dropdown
            %a.dropdown-toggle#logout-button{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %span.glyphicon.glyphicon-user
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Profile', user_path(current_user) 
              %li
              %li.divider
              %li
                = link_to "Log Out", logout_path 

