.row
  .col-xs-3
    =render "shared/sidebar"
  .col-xs-9
    %h1.title.text-center Your Groups
    - if current_user.admin
      %button.btn.btn-success#group-button
        <i class="fa fa-plus-circle"></i> Group
      .row
        .col-xs-4
          %div#group-form{class: "#{@group.errors.blank? ? 'hidden-form' : 'visible-form'}"}  
            = render "form"
        %br
    #groups
      - @groups.each_slice(4) do |groups|
        .row
          - groups.each do |group|
            .col-xs-3.feature
              = render partial: 'group_panel', locals: {group: group}          
