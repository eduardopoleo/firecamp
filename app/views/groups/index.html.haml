.row
  .col-xs-3
    =render "shared/sidebar"
  .col-xs-9
    %h1.feature-title.text-center Your Groups
    %button.btn-success#group-button
      + Group
    .row
      .col-xs-4
        = render "form"
      %br
    - @groups.each_slice(4) do |groups|
      .row
        - groups.each do |group|
          .col-xs-3.feature
            = render partial: 'group_panel', locals: {group: group}          
