.row
  .col-xs-3
    = render "shared/sidebar"
  .col-xs-8.group-column
    .row.header-row
      .col-xs-2.bordered-image-container
        = image_tag("#{@group.group_cover.to_s}", class: "group-image")
        %p.text-center #{@group.name}
      .col-xs-10.extra-class
        %ul.inner-navegation
          %li
            = link_to 'Messages', group_posts_path(@group) 
          %li
            = link_to 'Guides', group_guides_path(@group)
    .row
      .col-xs-12
        %h1.feature-title.text-center Guides
        %button.btn-success.add-resource#guide-button
          + Guide
        %div#guide-form{class: "#{@guide.errors.blank? ? 'hidden-form' : 'visible-form'}"}  
          = render 'guides/form'
        %br
        - @guides.each_slice(4) do |guides|
          .row
            - guides.each do |guide|
              = render partial: 'guides/guide', locals: {guide: guide, group: @group}
