.container
  .row
    .text-center 
      %h1#head-title-new-user Firecamp
      %span Come and share!
  .row
    .col-xs-4.col-xs-offset-4
      = bootstrap_form_for @user, :url => create_invited_user_path do |f|
        = f.email_field :email
        = f.text_field :full_name
        = f.password_field :password
        = hidden_field_tag 'token', @invitation.token 
        = f.submit "Sign Up!"
